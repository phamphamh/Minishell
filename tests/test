ls -la '$HOME'
ls -la inexistant
cat Makefile
cat -e Makefile
cat inexistant
cat Makefile inexistant
grep NAME Makefile
grep -i name Makefile
grep inexistant Makefile
grep NAME inexistant
wc Makefile
wc -l Makefile
wc -c Makefile
wc -w Makefile
wc inexistant
wc Makefile inexistant
head Makefile
head -n 5 Makefile
head inexistant
tail Makefile
tail -n 5 Makefile
tail inexistant
touch testfile
rm testfile
mkdir testdir
rmdir testdir
sleep 1
date
whoami
hostname
uname
uname -a
id
which ls
which inexistant
find . -name "*.c" -type f | wc -l
find / -name "*.c" -type f 2>/dev/null | head
ps
ps aux | grep bash
ps aux | grep zsh

# ----- CHEMINS ABSOLUS ET RELATIFS -----
/bin/ls
/bin/ls -l
./minishell -c "echo Bonjour"
