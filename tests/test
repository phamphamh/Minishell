cat Makefile | grep NAME | wc -l
cat inexistant | grep NAME | wc -l
(ls -la) | grep Make
(ls -la | grep Make) | wc -l
(ls -la) | (grep Make)
((ls -la) | (grep Make)) | wc -l
(ls -la | grep Make) | (wc -l)
(ls -la) | (grep Make) | (wc -l)
((ls -la) | (grep Make)) | ((wc -l))